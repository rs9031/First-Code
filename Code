#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int days,hours,minutes,seconds,sec;
    scanf("%d",&seconds);
    days = seconds/86400;
    hours = (seconds-(days*86400))/3600;
    minutes = (seconds-(days*86400)-(hours*3600))/60; 
    sec = (seconds-(days*86400)-(hours*3600)-(minutes*60));
    printf("The Duration is %d days %d hours %d minutes %d seconds", days,hours,minutes,sec);
    return 0; }
